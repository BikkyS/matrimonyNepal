<!doctype html>
<html>
<head>
    <title>Matrimony Nepal</title>
    <link rel="shortcut icon" href="images/marriage.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Publish</h1>
        <p><a href="/logout" class="btn btn-default btn-sm">Logout</a></p>
        <a href="/profile">Back to profile</a>
    </div>

    <div class="col-sm-4 col-sm-offset-4">

        <form action="/publish" method="post">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" name="name">
            </div>
             <div class="form-group">
              <label for="gender">Gender</label>
              <select class="form-control" name="gender">
                <option>Male</option>
                <option>Female</option>
                <option>Others</option>
              </select>
            </div>
            <div class="form-group">
                <label>Age</label>
                <input type="integer" class="form-control" name="age">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="integer" class="form-control" name="phone">
            </div>
            <div class="form-group">
                <label>Qualification</label>
                <input type="text" class="form-control" name="qualification">
            </div>
            <div class="form-group">
                <label>Looking for</label>
                <input type="text" class="form-control" name="looking-for">
            </div>
             <div class="form-group">
              <label>Bio</label>
              <textarea class="form-control" rows="5" name="comment"></textarea>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Publish</button>
        </form>

        <hr>

        <p>Or go<a href="/"> home</a>.</p>

    </div>

</div>
</body>
</html>