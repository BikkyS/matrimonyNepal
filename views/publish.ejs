<!doctype html>
<html>
<head>
    <title>Matrimony Nepal</title>
    <link rel="shortcut icon" href="images/marriage.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Publish</h1>
        <p><a href="/logout" class="btn btn-default btn-sm">Logout</a></p>
        <a href="/profile">Back to profile</a>
    </div>

    <div class="col-sm-4 col-sm-offset-4">

        <% if (message.length > 0) { %>
            <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert"
              aria-hidden="true">
              &times;
            </button>
            <%= message %>
            </div>
        <% } %>

        <form action="/publish" method="post">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" name="name">
            </div>
             <div class="form-group">
              <label for="gender">Gender</label>
              <select class="form-control" name="gender">
                <option>Male</option>
                <option>Female</option>
                <option>Others</option>
              </select>
            </div>
            <div class="form-group">
                <label>Age</label>
                <input type="integer" class="form-control" name="age">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="text" class="form-control" name="phone">
            </div>
            <div class="form-group">
                <label>Qualification</label>
                <input type="text" class="form-control" name="qualification">
            </div>
            <div class="form-group">
                <label>Looking for</label>
                <input type="text" class="form-control" name="lookingFor">
            </div>
             <div class="form-group">
              <label>Bio</label>
              <textarea class="form-control" rows="5" name="bio"></textarea>
            </div>
            <div class="form-group">
              <label class="btn btn-default btn-file">
                  Add your photo <input type="file" name="image" style="display: none;" onchange="$('#upload-image-info').html($(this).val());">
              </label>
              <span class='label label-info' id="upload-image-info"></span>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Publish</button>
        </form>

        <hr>

        <p>Or go<a href="/"> home</a>.</p>

    </div>

</div>
<script
  src="https://code.jquery.com/jquery-3.1.0.min.js"
  integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="
  crossorigin="anonymous"></script>
</body>
</html>