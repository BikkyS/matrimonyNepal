<!doctype html>
<html>
<head>
    <title>Matrimony Nepal</title>
    <link rel="shortcut icon" href="images/marriage.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/publish" class="btn btn-default btn-sm">Publish</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                  <% if (user.local.username) { %>    
                    <p>
                        <strong>email/username</strong>: <%= user.local.username %><br>
                    </p>
                    <a href="/unlink/local" class="btn btn-default">Disconnect</a>
                    <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local Account</a>
                  <% } %>
            </div>
        </div>

        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-facebook"></span> Facebook</h3>
                  <% if (user.facebook.token) { %>
                    <p>
                        <strong>name</strong>: <%= user.facebook.name %><br>
                        <strong>email</strong>: <%= user.facebook.email %>
                    </p>
                  <a href="/unlink/facebook" class="btn btn-primary">Disconnect</a>
                    <% } else { %>
                    <a href="/connect/facebook" class="btn btn-primary">Connect Facebook</a>
                  <% } %>

            </div>
        </div>

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-google-plus"></span> Google</h3>
                  <% if (user.google.token) { %>
                    <p>
                        <strong>name</strong>: <%= user.google.name %><br>
                        <strong>email</strong>: <%= user.google.email %>
                    </p>
                  <a href="/unlink/google" class="btn btn-danger">Disconnect</a>
                    <% } else { %>
                    <a href="/connect/google" class="btn btn-danger">Connect Google</a>
                  <% } %>

            </div>
        </div>

    </div>

</div>
</body>
</html>